{
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM"
    ],
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
