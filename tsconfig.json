{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,

    "paths": {
      "./*.ts": ["./*"]
    }
  },

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    },
  },

  "exclude": ["node_modules", "**/*.spec.ts"]
}