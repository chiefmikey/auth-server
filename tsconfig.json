{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2017",
    "sourceMap": true,
    "allowJs": true,

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,

    "paths": {
      "./*.ts": ["./*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
